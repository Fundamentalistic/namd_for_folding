NAMD_ARCH = BlueGeneL
CHARMARCH = bluegenel-xlc

BGL_INC = $(BGL_INSTALL)/bglsys/include

# blrts_xlC is usually in /opt/ibmcmp/vacpp/7.0/bin/

CXX = blrts_xlC -qstaticinline -DNO_SOCKET -DDUMMY_VMDSOCK -DNOHOSTNAME -DNO_GETPWUID -I$(BGL_INC) 

CXXOPTS = -O3 -qhot -Q -qarch=440 -qtune=440 
CXXNOALIASOPTS = -O3 -Q -qarch=440 -qtune=440 -qfloat=rsqrt:fltint -qalias=allp:addr 

CXXTHREADOPTS = -O3 -qarch=440 -qtune=440 -qstrict
CC = blrts_xlc
COPTS = -O4 -qhot
